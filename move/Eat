public class Eat extends Move{
    private int value = 1;

    public void move(Player player, EatItem item) {
        if (item.canEat()) {
            int currentHp = player.getHp();
            player.setHp(currentHp + item.getExpectedHeelingHP());
            System.out.println(item.getItemName() + "を食べた。HPが回復した！");
        } else {
            // 食べられない場合の効果を適用
            System.out.println(item.getItemName() + "を食べられなかった。");
            System.out.println(item.getCauseOfDeath());
            player.setHp(player.get_MIN_HP());
        }
    }

    public int getValue() {
        return value;
    }
}
